<!DOCTYPE html>
<html>
  <head>
    <title>TriviaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Trivia</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "Questions", root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "My questions", my_questions_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "My Answered Questions", answered_questions_path, class: 'nav-link' %>
          </li>
        </ul>
        <% if current_user %>
          <form class="form-inline my-2 my-lg-0">
            <%= link_to('Sign out', destroy_user_session_path, method: :delete) %>
          </form>
        <% else %>
          <form class="form-inline my-2 my-lg-0">
            <%= link_to('Sign In', new_user_session_path) %>
            <%= link_to('Sign Up', new_user_registration_path) %>
          </form>
        <% end %>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
