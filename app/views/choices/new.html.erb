<%= form_for([@question, @question.choices.build]) do |f| %>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_field :text, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :correct_answer %>
    <%= f.radio_button :correct_answer, true %>true
    <%= f.radio_button :correct_answer, false %>false
  </div>
<%= f.submit %>
<% end %>
